@page
@model FuwaCards.Pages.Admin.SealedStockModel
@{
}

<form method="post" enctype="multipart/form-data">

    <input type="text" asp-for="@Model.PokemonSealed.Id" readonly="readonly" />

    <div class="form-group">
        <label asp-for="@Model.PokemonSealed.Name"> </label>
        <input type="text" asp-for="@Model.PokemonSealed.Name" />
        <span asp-validation-for="@Model.PokemonSealed.Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.PokemonSealed.Quantity"> </label>
        <input type="text" asp-for="@Model.PokemonSealed.Quantity" />
        <span asp-validation-for="@Model.PokemonSealed.Quantity"></span>
    </div>

    <div class="form-group">
        <label asp-for="PokemonSealed.Price"> </label>
        <input type="number" asp-for="PokemonSealed.Price" step="0.01" />
        <span asp-validation-for="PokemonSealed.Price"></span>
    </div>


    <div class="form-group">
        <label asp-for="@Model.PokemonSealed.Type"> </label>
        <input type="text" asp-for="@Model.PokemonSealed.Type" />
        <span asp-validation-for="@Model.PokemonSealed.Type"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.PokemonSealed.Set"> </label>
        <input type="text" asp-for="@Model.PokemonSealed.Set" />
        <span asp-validation-for="@Model.PokemonSealed.Set"></span>
    </div>


    <div class="form-group">
        <label asp-for="@Model.PokemonSealed.Condition"> </label>
        <input type="text" asp-for="@Model.PokemonSealed.Condition" />
        <span asp-validation-for="@Model.PokemonSealed.Condition"></span>
    </div>

    <div class="form-group-image">
        <label class="form-title">Upload Image</label>
        <input type="file" name="imageFile" class="form-control imageControl" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.PokemonSealed.AltTex"> </label>
        <input type="text" asp-for="@Model.PokemonSealed.AltTex" />
        <span asp-validation-for="@Model.PokemonSealed.AltTex"></span>
    </div>

    <input type="submit" value="Save" />

</form>